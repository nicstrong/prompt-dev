{
  "extends": "@prompt-dev/typescript-config/base.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "./dist",
    "composite": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@prompt-dev/api": ["../../apps/api/src/api"],
      "@prompt-dev/api/*": ["../../apps/api/src/api/*"],
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist"]
}

{
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,


    "sourceMap": true,
    "resolveJsonModule": true,

    "jsx": "react-jsx",

    "moduleDetection": "force",
    "allowImportingTsExtensions": true

  },
  "exclude": ["node_modules"]
}

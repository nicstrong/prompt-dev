{
  "extends": "@prompt-dev/typescript-config/node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@prompt-dev/api": [
        "./src/api"
      ],
      "@prompt-dev/api/*": [
        "./src/api/*"
      ]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}